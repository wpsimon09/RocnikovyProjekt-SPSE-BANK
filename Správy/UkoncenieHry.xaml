<ContentDialog
    x:Class="Ročňíkový_projekt___Aplikácia_pre_banku.Správy.UkoncenieHry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ročňíkový_projekt___Aplikácia_pre_banku.Správy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="HRA UKONČENÁ"
    PrimaryButtonText="Rozumiem"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    
    CornerRadius="20">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
            <TextBlock Text="Tvoj čas:"/>
            <TextBlock Text="{x:Bind info.aktualnyCas.ToString()}" Width="60"/>
        </StackPanel>
    </Grid>
</ContentDialog>
